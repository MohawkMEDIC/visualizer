                    <canvas data-chart-legend="#eventClassLegend" data-chart-property="byClass" data-chart-type="doughnut" width="300" height="300"/>
                    <ul id="eventClassLegend" class="chart-legend">
                    </ul>
                </div>
            </div>
        </div>
